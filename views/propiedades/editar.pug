extends ../layout/admin.pug

block estilos
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="my-10 max-w-md mx-auto")
                each error in errores
                    div.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold(role="alert")
                        p= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(method="POST" novalidate).space-y-8
                input(type="hidden" name="_csrf" value=csrFToken)
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General
                    p.text-gray-600 Añade la informacion general de la propiedad en venta

                    div
                        label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="titulo") Titulo de anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo del anuncio" type="text" name="titulo" value=datos.titulo ? datos.titulo : '')  

                    div
                        label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="descripcion") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion del anuncio" name="descripcion" rows="3")= datos.descripcion ? datos.descripcion : ''

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")  
                                option(value="") -- Seleccione --
                                each categoria in categorias
                                    option(value=categoria.id selected=datos.categoriaId ? datos.categoriaId == categoria.id ? true :   false : null) #{categoria.nombre}

                        div(class="md:w-1/2")
                            label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")  
                                option(value="") -- Seleccione --
                                each precio in precios
                                    option(value=precio.id selected=datos.precioId ? datos.precioId == precio.id ? true : false : null) #{precio.nombre}

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")
                            label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")  
                                option(value="") -- Seleccione --
                                - let n = 1;
                                    while n < 5
                                        option(value=n selected=datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n}
                                        - n++

                        div(class="md:w-1/3")
                            label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")  
                                option(value="") -- Seleccione --
                                - let m = 1;
                                    while m < 5
                                        option(value=m selected=datos.estacionamiento ? datos.estacionamiento == m ? true : false : null) #{m}
                                        - m++
                        div(class="md:w-1/3")
                            label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")  
                                option(value="") -- Seleccione --
                                - let o = 1;
                                    while o < 5
                                        option(value=o selected=datos.wc ? datos.wc == o ? true : false : null) #{o}
                                        - o++
                    div.border-gray-200.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación
                        p.text-gray-600 Ubica la propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle=datos.calle ? datos.calle : 'Cargando...'

                        input(type="hidden" name="calle" id="calle" value=datos.calle ? datos.calle : '')
                        input(type="hidden" name="longitud" id="longitud" value=datos.longitud ? datos.longitud : '')
                        input(type="hidden" name="latitud" id="latitud" value=datos.latitud ? datos.latitud : '')

                    input(class="w-full py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded cursor-pointer transition-colors uppercase" type="submit" value="Guardar Cambios")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js") 
    script(src="/js/mapa.js")