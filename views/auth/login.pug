extends ../layout/index.pug

block contenido
    div.py-10
        h1.text-4xl.my-5.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="my-10 max-w-md mx-auto")
                each error in errores
                    div.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold(role="alert")
                        p= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="/auth/login", method="POST", class="space-y-5")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")      
                    div
                        label.block.text-gray-500.text-sm.font-bold.mb-2.uppercase(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password")  

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes una cuenta? Regístrate
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password

                    input(type="submit" value="Iniciar Sesión" class="bg-green-600 w-full text-white font-bold py-2 px-4 rounded-md hover:bg-green-700 cursor-pointer transition-colors")